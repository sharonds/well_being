# Dashboard Environment Configuration (Example)
# Copy to .env and fill in real values. NEVER COMMIT .env.
# File permissions: chmod 600 .env

# Garmin account used ONLY for personal dashboard (consider dedicated account)
GARMIN_USERNAME=
GARMIN_PASSWORD=

# Sync configuration (respectful usage)
SYNC_INTERVAL_HOURS=24
MAX_RETRIES=5
RETRY_BASE_SECONDS=30

# Scoring
WB_FORMULA_VERSION=1.0.0

# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_ORG=local
INFLUXDB_BUCKET=garmin
INFLUXDB_TOKEN=

# Grafana (ensure you change from defaults BEFORE ingestion)
GRAFANA_ADMIN_USER=
GRAFANA_ADMIN_PASSWORD=

# Logging / Paths
RAW_EXPORT_DIR=./private/raw_exports
DERIVED_EXPORT_DIR=./private/derived

# Security Flags
ENFORCE_PARITY=true
ALLOW_UNOFFICIAL_API=true

# Do NOT add secrets below this line.
